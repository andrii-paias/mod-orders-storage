{
  "id": "${artifactId}-${version}",
  "name": "Orders CRUD module",
  "provides": [
    {
      "id": "purchase_order",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/purchase_order",
          "permissionsRequired": ["purchase_order.collection.get"]
        },
        {
          "methods": ["POST"],
          "pathPattern": "/purchase_order",
          "permissionsRequired": ["purchase_order.item.post"]
        },
        {
          "methods": ["GET"],
          "pathPattern": "/purchase_order/{id}",
          "permissionsRequired": ["purchase_order.item.get"]
        },
        {
          "methods": ["PUT"],
          "pathPattern": "/purchase_order/{id}",
          "permissionsRequired": ["purchase_order.item.put"]
        },
        {
          "methods": ["DELETE"],
          "pathPattern": "/purchase_order/{id}",
          "permissionsRequired": ["purchase_order.item.delete"]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/_/tenant"
        }
      ]
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": { "PortBindings": { "8081/tcp":  [{ "HostPort": "%p" }] } } 
    },
    "dockerPull" : false
  }
}
